*
  margin 0
  padding 0

color-blue = #024972
color-black = #1f1f1f

.text-color-white
  color white

li
  list-style-type none

a
  text-decoration none

h2
  font-size 65px

.text-main
  font-family 'Montserrat'
  font-style normal
  font-weight 400
  font-size 24px

.text-main-sub
  font-family 'Montserrat'
  font-style normal
  font-weight 400
  font-size 16px
  line-height 20px

.text-main-bold
  font-family 'Montserrat'
  font-style normal
  font-weight 500
  line-height 29px

.text-title
  font-family 'Merriweather'
  font-style normal
  font-weight 400

.button
  font-family 'Montserrat'
  font-style normal
  font-weight 500
  line-height 29px
  width auto
  padding 13px 15px
  background-color white
  border-radius 5px
  color color-black
  display inline-block
  font-size 24px
  margin-top 48px
  &:hover
    cursor pointer

.container
  max-width 1280px
  margin 50px auto
  &__title
    margin-bottom 50px

.header
  &__navigation
    &__list
      display flex
      flex-direction row
      justify-content space-between

    &__logo
      padding 10px 15px
      background-color color-blue
      border-radius 5px
      &-text
        color white

    &__item
      margin auto 0

    &__link
      color color-black
  &__container
    margin-top 90px
    display flex
    flex-direction row
    gap 23px
    &__left
      display flex
      flex-direction column
      gap 20px
    &__right
      display grid
      align-items end
      align-self start
      margin-top auto
      grid-gap 20px
  &__title
    line-height 151px
    color color-black
    font-size 190px
    height 144px
  &__statistics
    background-color color-blue
    padding 20px
    color white
    border-radius 5px
    &__title
      font-size 65px
    &__list
      margin-top 10px
      display flex
      flex-direction column
      gap 8px
    &__item
      display flex
      align-items center
      gap 10px
    &__button
      width auto
      padding 13px 15px
      background-color white
      border-radius 5px
      color color-black
      display inline-block
      font-size 24px
      margin-top 48px
  &__description
    color color-black
    line-height 29px

.marquee-container
  width 100%
  overflow hidden
  white-space nowrap
  position relative
  background color-blue
  padding 11px 0

.marquee
  display flex
  gap 50px
  width max-content
  animation marquee 15s linear infinite
  color white
  &-item
    display flex
    align-items center
    gap 50px
    font-size 25px

@keyframes marquee
  from
    transform translateX(0)
  to
    transform translateX(-50%)

.about
  &__container
    display flex
    flex-direction row
    gap 20px
    margin-bottom 100px

  &__left
    &-img
      margin-bottom 50px

  &__right
    display flex
    flex-direction row
    gap 0
    &-container
      background-color color-blue
      color white
      border-top-right-radius 5px
      border-bottom-right-radius 5px
      padding 20px
      .text-title
        font-size 65px
        margin-bottom 10px
      .text-main-bold
        font-size 22px
        margin-bottom 20px
      .text-main
        font-size 16px
      .button
        display block
        text-align center
        margin-top 100%

.team
  display flex
  grid-template-columns repeat(3, 1fr)
  gap 40px
  justify-content center
  position relative
  padding 50px 0
  background-image url("../images/team_background.png")
  background-size cover
  margin-bottom 100px

  &__wrapper
    max-width 1280px
    display flex
    flex-wrap wrap
    column-gap 20px
    row-gap 50px


  &__member 
    display flex
    flex-direction column
    align-items center
    text-align center
    margin 0 auto
    padding 0 20px 20px
    position relative

    &_border
      position absolute
      bottom 0
      left 50%
      transform translateX(-50%)
  

  &__photo 
    width 150px
    height 150px
    object-fit cover
  

  &__info 
    background #0B4870
    color white
    width 149px
    padding 35px 104px
    border-radius 5px
    margin-top 50px

  &__name
    font-weight 500

  &__position
    margin-top 10px
    font-family 'Montserrat'
    font-style normal
    font-weight 400
    font-size 14px
    line-height 20px

.publications
  display flex
  flex-wrap wrap
  column-gap 50px
  align-items unset
  margin 0 auto
  justify-content center
  row-gap 20px
  padding 0 20px
  color color-black

